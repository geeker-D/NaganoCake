<div class="container">
  <div class="row">
    <div class="text-error">
        <%= render 'layouts/public/errors', obj: @genre %>
    </div>
    <div class="col-sm-12 col-md-8 mx-auto">
      <div class="genre-form mb-4 mt-4">
        <h4 class="genre_index">ジャンル一覧・追加</h4>
            <%= form_with model:@genre, url:admin_genres_path do |f| %>
            <%= f.label :name, "ジャンル名" %>
            <%= f.text_field :name %>
          <div class="btn-group ml-5">
            <%= f.submit "新規登録", class: 'btn btn-outline-dark font-weight-bold form-button-common btn-lg' %>
            <% end %>
          </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 mx-auto">
      <table class="table table-hover">
        <thead class="thead-light">
          <tr class="table-secondary">
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
          <% @genres.each do |genre| %>
        <tbody>
          <tr>
            <th><%= genre.name %></th>
            <td><%= link_to edit_admin_genre_path(genre.id) do %>
                <button type="button" class="btn btn-outline-dark font-weight-bold form-button-common">編集する</button>
                <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
