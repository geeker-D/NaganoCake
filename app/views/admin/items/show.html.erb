<div class="container">
  <div style = "margin-top: 50px;">
    <h4 class="font-weight-bold"><u>商品詳細</u></h4>
  </div>
  <div class="row mt-5">
    <div class="col-md-4 ml-5">
      <%= image_tag @item.get_item_image, size:"350x350" %>
    </div>
    <div class="col-md-6" style="text-align: center;">
      <%= render 'show', item: @item %>
      <%= link_to edit_admin_item_path(@item) do %>
        <button type="button" class="btn btn-success">編集する</button>
      <% end %>
    </div>
  </div>
</div>
