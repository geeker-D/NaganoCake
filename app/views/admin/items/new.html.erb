<div class="container">
  <div>
  　<h4 class="item_new">商品新規登録</h4>
  </div>
    <div class="row">
      <div class="col-6 mx-auto">
        <%= form_with model:@item, url:admin_items_path do |f| %>
          <div class="form_group">
            <%= f.label :image, "商品画像" %></br>
            <%= f.file_field :image,  accept: 'image/*' %>
          </div>
          <div class="form_group pt-2 pb-2">
            <%= f.label :name, "商品名" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form_group pt-2 pb-2">
            <%= f.label :summary, "商品説明" %>
            <%= f.text_area :summary, size: "40x8" , class: "form-control" %>
          </div>
          <div class="form_group pt-2 pb-2">
            <%= f.label :genre_id, 'ジャンル' %></br>
            <%= f.collection_select :genre_id, @genres,:id,:name %>
          </div>
          <div class="form_group pt-2 pb-2">
            <%= f.label :price_non_tax, "税抜価格" %>(円)
            <%= f.text_field :price_non_tax, class: "form-control" %>
          </div>
          <div class="form_botton pt-2 pb-2">
            <%= f.label :is_active, "販売ステータス" %>
             <%= f.radio_button :is_active, :"販売中" %>
            <%= f.label :is_active, "販売中" %>
             <%= f.radio_button :is_active, :"販売停止中" %>
            <%= f.label :is_active, "販売停止中" %>
          </div>
        <div class="text_center">
          <%= f.submit "新規登録" ,class: "btn btn-outline-success btn-lg" %>
        <% end %>
        </div>
      </div>
    </div>
</div>
