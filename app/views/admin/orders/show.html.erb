
<div class="container">
  <div class="badge badge-warning">
    <h3>注文履歴詳細</h3>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-8">
      <%= form_with model:@order, url:admin_order_path(@order.id),local:true do |f| %>
      <table class="table table-borderless">
        <thead>
          <tr>
            <th>購入者</th>
            <td><%= @order.customer.last_name %><%= @order.customer.first_name %></td>
          </tr>
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td><%= @order.address %></td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_type_i18n %></td>
          </tr>
          <tr>
            <th>注文ステータス</th>
            <td><%= f.select :status, Order.statuses.keys.map {|stat| [I18n.t("enums.order.status.#{stat}"), stat]} %>
                <%= f.submit "更新", class: "btn btn-outline-success" %>
            </td>
          </tr>
        </thead>
      </table>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <table class="table table-hover">
        <thead>
          <tr class="table-secondary">
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <% @order_details.each do |order_detail| %>
        <tbody>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= (order_detail.price).floor*order_detail.amount %></td>
            <td>
              <%= form_with model:[@order_detail], url:admin_order_order_detail_path(order_detail.id),method: :patch do |f| %>
                <%= f.select :product_status, OrderDetail.product_statuses.keys.map {|stat| [I18n.t("enums.order_detail.product_status.#{stat}"), stat]} %>
                <%= f.submit "更新" ,class: "btn btn-outline-success" %>
              <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <table>
        <tr>
          <th>商品合計</th>
          <td><%= @order.total_payment - @order.shipping_fee %>円</td>
        </tr>
        <tr>
          <th>送料</th>
          <td><%= @order.shipping_fee %>円</td>
        </tr>
        <tr>
          <th>ご請求金額</th>
          <td><%= @order.total_payment %>円</td>
        </tr>
      </table>
    </div>
  </div>
</div>