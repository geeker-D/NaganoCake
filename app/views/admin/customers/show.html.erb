<div class="container">
  <div class="badge badge-warning">
    <h3>
      <%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細
    </h3>
  </div>
  <table class="table table-borderless">
    <thead>
      <tr>
        <th>会員ID</th>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <th>氏名</th>
        <td><%= @customer.last_name %> <%= @customer.first_name %></td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @customer.post_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @customer.phone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <td><%= @customer.is_deleted ? '退会' : '有効' %></td>
      </tr>
    </thead>
  </table>
    <div class="form_edit">
      <%= link_to edit_admin_customer_path(@customer) do %>
        <button type="button" class="btn btn-outline-success">編集する</button>
      <% end %>
      <%= link_to index_order_admin_customer_path(@customer.id) do %>
        <button type="button" class="btn btn-outline-info">注文履歴一覧を見る</button>
      <% end %>
    </div>
</div>
