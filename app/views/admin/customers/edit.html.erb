<div class="container">
  <div class="badge badge-warning">
    <h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>
  </div>
   <%= form_with model:@customer,url: admin_customer_path(@customer.id), method: :patch do |f| %>
  <table class="table table-borderless">
    <thead>
      <tr>
        <th>会員ID</th>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <th>氏名</th>
        <td><%= f.text_field :last_name, class: "last_name_field" %> <%= f.text_field :first_name %></td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td><%= f.text_field :last_name_kana, class: "last_name_kana_field" %> <%= f.text_field :first_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= f.text_field :post_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= f.text_field :address, size: "60x2" %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= f.text_field :phone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= f.email_field :email %></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
          <div class="customer_field">
            <td>
              <%= f.radio_button :is_deleted, :"有効" %>
                <%= f.label :is_deleted, "有効" %>
              <%= f.radio_button :is_deleted, :"退会" %>
                <%= f.label :is_deleted, "退会" %>
            </td>
          </div>
      </tr>
    </thead>
  </table>
   <%= f.submit "変更を保存", class: "btn btn-outline-success" %>
   <% end %>
</div>