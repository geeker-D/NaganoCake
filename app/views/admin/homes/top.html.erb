<div class="container">
  <div class="badge badge-warning">
    <h3>注文履歴一覧</h3>
  </div>
   <div class="row">
    <div class="col-sm-12 col-md-8 mx-auto">
      <table class="table table-hover">
        <thead>
          <tr class="table-secondary">
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <th><%= link_to admin_order_path(order.id) do %>
                <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></th>
               <% end %>
            <th><%= order.customer.last_name %><%= order.customer.first_name %></th>
            <th><%= order.order_details.sum(:amount) %></th>
            <th><%= order.status %></th>
          </tr>
        </tbody>
          <% end %>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>
