<header class="Header">
  <nav class="navbar navbar-expand-lg navbar-light p-3" style="background-color:#fffacd;" >
    <div class="container">
      <a class="navbar-brand" href="/">
        <div class= 'img_wrap_kuni'>
          <%= image_tag('Nagano_Cake_Logo.png', size: '90x90') %>
        </div>
      </a>
      <% if customer_signed_in? %>
        <div class="login_customer_disp_name">
          <i class="fas fa-door-open"></i><b class='custo'>　～ようこそ、
          <%= current_customer.last_name %>
          さん！～</b>
        </div>
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if customer_signed_in? %>
          <li>
            <%= link_to customers_mypage_path, class: 'nav-link text-dark heaedr-link' do %>
              <i class="fas fa-user-circle"></i><b>マイページ</b>
            <% end %>
          </li>
          <li>
            <%= link_to items_path, class: 'nav-link text-dark heaedr-link' do %>
              <i class="fas fa-cheese"></i><b>商品一覧</b>
            <% end %>
          </li>
          <li>
              <%= link_to cart_items_path, class: 'nav-link text-dark heaedr-link news_cart_item' do %>
                <i class="fas fa-shopping-cart"></i><b>カート</b>
                <% if current_customer.cart_items.exists? %>
                  <span class="news_count"><%= current_customer.cart_items.count %></span>
                <% end %>
              <% end %>
          </li>
          <li>
            <%= link_to destroy_customer_session_path, method: :delete, class: 'nav-link text-dark heaedr-link' do %>
              <i class="fas fa-sign-in-alt"></i><b>ログアウト</b>
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to about_path, class: 'nav-link text-dark heaedr-link' do %>
              <i class="fas fa-exclamation-circle"></i><b>About</b>
            <% end %>
          </li>
          <li>
            <%= link_to items_path, class: 'nav-link text-dark heaedr-link' do %>
              <i class="fas fa-cheese"></i><b>商品一覧</b>
            <% end %>
          </li>
          <li>
            <%= link_to new_customer_registration_path, class: 'nav-link text-dark heaedr-link' do %>
              <i class="fas fa-user-plus"></i><b>新規登録</b>
            <% end %>
          </li>
          <li>
            <%= link_to new_customer_session_path, class: 'nav-link text-dark heaedr-link' do %>
              <i class="fas fa-sign-in-alt"></i><b>ログイン</b>
            <% end %>
          </li>
        <% end %>
        </ul>
        <ul class="navbar-nav">
          <div class="container h-100">
            <div class="d-flex justify-content-center h-100">
              <div class="searchbar">
                <input class="search_input" type="text" name="" placeholder="Search...">
                <a href="#" class="search_icon"><i class="fas fa-search"></i></a>
              </div>
            </div>
          </div>
        </ul>
      </div>
    </div>
  </nav>
</header>