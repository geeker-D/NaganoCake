<div class="row mt-3">
  <div clsss="col-md-7">
    <h4>注文情報</h4>
    <table class="table table-bordered table-hover">
      <tr>
        <th class="table-secondary">注文日</th>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <th class="table-secondary">配送先</th>
        <td>〒<%= order.post_code %><br>
          <%= order.address %><br>
          <%= order.to_name %>
        </td>
      </tr>
        <tr>
          <th class="table-secondary">支払い方法</th>
          <td><%= order.payment_type_i18n %></td>
        </tr>
        <tr>
          <th class="table-secondary">ステータス</th>
          <td><%= order.status_i18n %></td>
        </tr>
    </table>
    </div>
    <div clsss="col-md-4 offset-md-1">
      <table class="table table-bordered table-hover">
        <h4>請求情報</h4>
        <tr>
          <th class="table-secondary">商品合計</th>
          <td><%= (order.total_payment - order.shipping_fee).to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <th class="table-secondary">配送料</th>
          <td><%= order.shipping_fee.to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <th class="table-secondary">ご請求金額</th>
          <td><%= order.total_payment.to_s(:delimited) %>円</td>
        </tr>
      </table>
    </div>
</div>
<div class="row mt-3">
  <div class="col-md-7">
    <table class="table table-bordered table-hove">
      <thead class="table-secondary">
        <tr>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
        <% order.order_details.each do |order_detail| %>
        <tr>
          <td>
            <%= image_tag order_detail.item.get_item_image, size: '50x50' %>
            <%= order_detail.item.name %></td>
          <td><%= number_to_currency((order_detail.item.price_non_tax * 1.1).floor, unit: "¥", format: "%u %n", precision: 0) %></td>
          <td><%= order_detail.amount %></td>
          <td><%= number_to_currency((order_detail.item.price_non_tax * 1.1).floor * order_detail.amount, unit: "¥", format: "%u %n", precision: 0) %></td>
        <% end %>
        </tr>
    </table>
  </div>
</div>