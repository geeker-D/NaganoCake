<div class='container'>
  <div class='row justify-content-center'>
    <div class="col-md-12">
      <div class='row'>
        <h5>注文情報入力</h5>
      </div>
      <%= form_with model:@order,url: order_preconfirm_orders_path, local:true do |f| %>
      <div class='container'>
        <div class='row'>
          <h6>支払い方法</h6>
          <div class='container'>
            <div class="field">
              <%= f.radio_button :payment_type, Order.payment_types.key(0),{checked:true} %>
              <%= f.label :payment_type, Order.payment_types_i18n[:credit_card] %>
            </div>
            <div class="field">
              <%= f.radio_button :payment_type, Order.payment_types.key(1) %>
              <%= f.label :payment_type, Order.payment_types_i18n[:transfer]%>
            </div>
          </div>
        </div>
        </div>
        <div class='container'>
          <div class='row'>
            <h6>お届け先</h6>
            <div class='container'>
              <div class="field">
                <%= f.radio_button :address_radio_type, 1,{checked:true} %>
                <%= f.label "ご自身の住所" %>
                <div class='container'>
                  <%= "〒"+current_customer.post_code+" "+current_customer.address %><br>
                  <%= current_customer.last_name + current_customer.first_name %>
                </div>
              </div>
              <div class="field">
                <%= f.radio_button :address_radio_type, 2 %>
                <%= f.label "登録済住所から選択" %>
                <div class='container'>
                  <div class="field">
                    <%= f.select :shipping_address_id,
                      options_for_select(@shipping_info),
                      { class: "form-group form-control mr-2"}
                    %>
                  </div>
                </div>
              </div>
              <div class="field">
                <%= f.radio_button :address_radio_type, 3 %>
                <%= f.label "新しいお届け先" %>
                <div class='container'>
                  <div class="field">
                    <div class="row">
                      <div class="col-3">
                        <%= f.label "郵便番号(ハイフンなし)" %>
                      </div>
                      <div class="col-3">
                        <%= f.text_field :input_post_code, class: "form-control" %>
                      </div>
                    </div>
                  </div>
                  <div class="field">
                    <div class="row">
                      <div class="col-3">
                        <%= f.label "住所" %>
                      </div>
                      <div class="col-8">
                        <%= f.text_field :input_address, class: "form-control" %>
                      </div>
                    </div>
                  </div>
                  <div class="field">
                    <div class="row">
                      <div class="col-3">
                        <%= f.label "宛名" %>
                      </div>
                      <div class="col-3">
                        <%= f.text_field :input_to_name, class: "form-control" %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class='container'>
          <div class="actions col-md-2">
            <%= f.submit "確認画面へ進む",class: 'btn btn-sm btn-primary btn-block' %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
