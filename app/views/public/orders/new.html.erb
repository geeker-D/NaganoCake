<div class='container'>
  <div class='row justify-content-center'>
    <div class="col-md-10">
      <div class='row'>
        <h5>注文情報入力</h5>
      </div>
      <%= form_with model:@order, local:true do |f| %>
      <div class='container'>
        <div class='row'>
          <h6>支払い方法</h6>
          <div class='container'>
            <div class="field">
              <%= f.radio_button :payment_type, Order.payment_types.key(0) %>
              <%= f.label :payment_type, Order.payment_types_i18n[:credit_card] %>
            </div>
            <div class="field">
              <%= f.radio_button :payment_type, Order.payment_types.key(1) %>
              <%= f.label :payment_type, Order.payment_types_i18n[:transfer]%>
            </div>
          </div>
        </div>
        </div>
        <div class='container'>
          <div class='row'>
            <h6>お届け先</h6>
            <div class='container'>
              <div class="field">
                <%= f.radio_button :shipping_address, Order.payment_types.key(0), %>
                <%= f.label "ご自身の住所" %>
              </div>
              <div class="field">
                <%= f.radio_button :shipping_address, Order.payment_types.key(0) %>
                <%= f.label "登録済住所から選択" %>
              </div>
              <div class="field">
                <%= f.radio_button :shipping_address, Order.payment_types.key(0) %>
                <%= f.label "新しいお届け先" %>
              </div>
            </div>
          </div>
        </div>
        <div class="actions col-md-2">
          <%= f.submit "確認画面へ進む",class: 'btn btn-sm btn-outline-primary btn-block' %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
