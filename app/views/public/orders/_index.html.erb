<table class="table table-bordered table-hover">
  <thead class="thead-light">
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% orders.each do |order| %>
    <tr>
      <td class="align-middle"><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
      <td class="align-middle">
        〒<%= order.post_code %><br>
          <%= order.address %><br>
          <%= order.to_name %></td>
      </td>
      <td class="align-middle">
        <% order.order_details.each do |order_detail| %>
          <%= order_detail.item.name %><br>
        <% end %>
      </td>
      <td class="align-middle">¥ <%= order.total_payment.to_s(:delimited) %></td>
      <td class="align-middle"><%= order.status_i18n %></td>
      <td class="align-middle"><%= link_to "表示する", order_path(order), class: "btn btn-outline-dark font-weight-bold form-button-common" %></td>
    </tr>
    <% end %>
  </tbody>
</table>