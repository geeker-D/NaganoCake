<div class='container'>
  <div class='row'>
    <div class="col-md-10">

      <div class='row'>
        <h6>ショッピングカート</h6>
        <div>
          <%=link_to "カートを空にする", destroy_all_cart_items_path, class: 'btn btn-sm btn-outline-danger' %>
        </div>
      </div>

      <table class='table table-hover'>
        <thead class='thead-light'>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= image_tag cart_item.item.get_item_image, size: '50x50' %>
                <%= cart_item.item.name %>
              </td>
              <td>
                <%= (cart_item.item.price_non_tax * 1.1).floor %>
              </td>
              <td>
                <%= cart_item.amount %>
              </td>
              <td>
                <%= (cart_item.item.price_non_tax * 1.1).floor * cart_item.amount%>
              </td>
              <td>
                <%=link_to "削除する", cart_item_path(cart_item.id), method: :delete,  class: 'btn btn-sm btn-outline-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class='row'>
        <div class="col-md-9">
          <%=link_to "買い物を続ける", root_path,  class: 'btn btn-sm btn-outline-primary' %>
        </div>
        <div class="col-md-3">
          <table class='table'>
            <tbody>
              <tr>
                <td><b>合計金額</b></td>
                <td>
                  <%= number_to_currency(@total_payment_no_shipfee, unit: "¥", format: "%u %n", precision: 0) %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class='row'>
        <div class="col-md-12">
          <%=link_to "情報入力に進む", new_order_path,  class: 'btn btn-sm btn-outline-success' %>
        </div>
      </div>
    </div>
  </div>
</div>
