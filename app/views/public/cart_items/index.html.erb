<div class='container'>
  <div class='row justify-content-center'>
    <div class="col-md-10">
      <div class='row'>
        <h6>ショッピングカート</h6>
        <% if current_customer.cart_items.exists? %>
        <div class='col text-right d-inline-block btn_link' >
          <%=link_to "カートを空にする", destroy_all_cart_items_path,method: :delete, class: 'btn btn-sm btn-danger' %>
        </div>
        <% end %>
      </div>
      <%= render 'table', cart_items: @cart_items %>
      <div class='row'>
        <div class="col-md-9">
          <%=link_to "買い物を続ける", root_path,  class: 'btn btn-sm btn-primary' %>
        </div>
        <% if current_customer.cart_items.exists? %>
        <div class="col-md-3">
          <table class='table'>
            <tbody>
              <tr>
                <td><b>合計金額</b></td>
                <td>
                  <%= number_to_currency(@total_payment_no_shipfee, unit: "¥", format: "%u %n", precision: 0) %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        <% end %>
      </div>
      <% if current_customer.cart_items.exists? %>
      <div class='row'>
        <div class="col-md-12 text-center">
          <%=link_to "情報入力に進む", new_order_path,  class: 'btn btn-success d-grid gap-2 col-4 mx-auto' %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
