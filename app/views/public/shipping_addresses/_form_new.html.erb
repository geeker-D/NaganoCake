<%= form_with model: shipping_address, url: shipping_addresses_path(shipping_address), method: :post do |f| %>
  <div class="form-group row mt-5">
    <%= f.label :"郵便番号(ハイフンなし)", class:"col-md-4 col-form-label text-md-right fw-bold" %>
    <div class="col-md-2 px-md-0">
      <%= f.text_field :post_code, autofocus: true, placeholder: "0000000", class:"form-control" %>
    </div>
  </div>
  <div class="form-group row mt-3">
    <%= f.label :"住所", class:"col-md-4 col-form-label text-md-right fw-bold" %>
    <div class="col-md-8 px-md-0">
      <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class:"form-control" %>
    </div>
  </div>
  <div class="form-group row mt-3">
    <%= f.label :"宛名", class:"col-md-4 col-form-label text-md-right fw-bold" %>
    <div class="col-md-3 px-md-0">
      <%= f.text_field :to_name, placeholder: "令和道子", class: "form-control" %>
    </div>
    <div class="col" style="text-align: right;">
      <%= f.submit "新規登録", class: "btn btn-outline-dark font-weight-bold form-button-common" %>
    </div>
  </div>
<% end %>