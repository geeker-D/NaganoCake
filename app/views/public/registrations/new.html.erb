<div class='container'>
  <div class='row'>
    <div class="col-md-10">
      <h4>新規会員登録</h4>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <div class='row'>
            <div class='col-md-3'>
              <span>名前</span>
            </div>
            <div class='col-md-1'>
              <%= f.label :"(姓)" %>
            </div>
            <div class='col-md-3'>
              <%= f.text_field :last_name %>
            </div>
            <div class='col-md-1'>
              <%= f.label :"(名)" %>
            </div>
            <div class='col-md-3'>
              <%= f.text_field :first_name %>
            </div>
          </div>
        </div>

        <div class="field">
          <div class='row'>
            <div class='col-md-3'>
              <span>フリガナ</span>
            </div>
            <div class='col-md-1'>
              <%= f.label :"(セイ)" %>
            </div>
            <div class='col-md-3'>
              <%= f.text_field :last_name_kana %>
            </div>
            <div class='col-md-1'>
              <%= f.label :"(メイ)" %>
            </div>
            <div class='col-md-3'>
              <%= f.text_field :first_name_kana %>
            </div>
          </div>
        </div>

        <div class="field">
          <div class='row'>
            <div class='col-md-4'>
              <%= f.label :"メールアドレス" %>
            </div>
            <div class='col-md-3'>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
          </div>
        </div>

        <div class="field">
          <div class='row'>
            <div class='col-md-4'>
              <%= f.label :"郵便番号(ハイフンなし)" %>
            </div>
            <div class='col-md-3'>
              <%= f.text_field :post_code %>
            </div>
          </div>
        </div>

        <div class="field">
          <div class='row'>
            <div class='col-md-4'>
              <%= f.label :"住所" %>
            </div>
            <div class='col-md-8'>
              <%= f.text_field :address , :size=>"63" %>
            </div>
          </div>
        </div>

        <div class="field">
          <div class='row'>
            <div class='col-md-4'>
              <%= f.label :"電話番号(ハイフンなし)" %>
            </div>
            <div class='col-md-3'>
              <%= f.text_field :phone_number %>
            </div>
          </div>
        </div>

        <div class="field">
          <div class='row'>
            <div class='col-md-4'>
              <%= f.label :"パスワード" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %>文字以上)</em>
              <% end %>
            </div>
            <div class='col-md-3'>
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>
          </div>
        </div>

        <div class="field">
          <div class='row'>
            <div class='col-md-4'>
              <%= f.label :"パスワード(確認用)" %><br />
            </div>
            <div class='col-md-3'>
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
          </div>
        </div>

        <div class='row'>
          <div class='col-md-4'>
          </div>
          <div class='col-md-2'>
            <div class="actions">
              <%= f.submit "新規登録",class: 'btn btn-sm btn-outline-success btn-block' %>
            </div>
          </div>
        </div>
      <% end %>
      <h6>既に登録済の方</h6>
      <div class='row'>
        <!--<div class='col-md-10'>-->
          <%= render "public/shared/links" %><P> からログインしてください</p>
        <!--</div>-->
      </div>
    </div>
  </div>
</div>