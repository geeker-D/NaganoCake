<div class="mt-5">
  <% @items.each do |item| %>
    <div class="mr-3" style="float:left; text-align: center;" >
      <%= link_to item_path(item.id) do %>
        <p><%= image_tag item.get_item_image,size:"190x190" %></p>
        <p><%= item.name %></p>
        <p>¥ <%= item.with_tax_price.to_s(:delimited) %>（税込）</p>
      <% end %>
    </div>
  <% end %>
</div>