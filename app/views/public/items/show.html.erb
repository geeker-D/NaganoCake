<div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class = "col-md-3">
      <%= render 'genre_search', genres: @genres %>
    </div>
    <div class = 'col-md-2 offset-md-1'>
      <%= image_tag @item.get_image(100,100) %>
    </div>
    <div class = "col-md-4 offset-md-1" >
      <% form_with model: @cart_item do |f| %>
        <h3><%= @item.name %></h3>
        <p><%= @item.summary %></p>
        <p><%= @item.with_tax_price %>円（税抜）</p>
        <p><%= f.select :amount, [['1個', 1], ['2個', 2], ['3個', 3], ['4個', 4], ['5個', 5], ['6個', 6], ['7個', 7], ['8個', 8], ['9個', 9]], {:prompt => "個数選択"} %>
        <span><%= f.submit "カートに入れる", class:"btn btn-primary" %></span>
        </p>
      <% end %>
    </div>
  </div>
</div>

