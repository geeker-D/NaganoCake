<div class = "container">
  <div class = "row" style = "margin-top: 50px;">
    <div class = "col-3">
      <%= render 'genre', genres: @genres %>
    </div>
    <div class = 'col-9'>
      <div class="row">
        <h4 class="font-weight-bold"><u>商品一覧<span style = "font-size:20px;">（全<%= @items.count %>件）</span></u></h4>
        <%= render 'index', item: @item %>
      </div>
      <div style = "text-align: center;">
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>