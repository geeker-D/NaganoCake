<div class='container'>
  <div class='row'>
    <div class="col-md-12">
      <h4>ログイン</h4>
      <h6>会員の方はこちらからログイン</h6>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <span class="col-md-4">
              <%= f.label :メールアドレス %>
            </span>
            <span class="col-md-10 float-right">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </span>
          </div>
          <div class="field">
            <span class="col-md-4">
              <%= f.label :パスワード %>
            </span>
            <span class="col-md-10 float-right">
              <%= f.password_field :password, autocomplete: "current-password" %>
            </span>
          </div>
          <div class="actions col-md-2">
            <%= f.submit "ログイン",class: 'btn btn-sm btn-outline-primary btn-block' %>
          </div>
        <% end %>
      <div class="navigation_area"></div>
        <h6>会員登録がお済でない方</h6>
        <div class='row'>
          <div class='col-md-10'>
          <%= render "public/shared/links" %>から新規登録してください
          </div>
        </div>
      </div>
    </div>
  </div>
</div>