<div class='container'>
  <div class='row'>
    <div class="col-md-10">
      <h4>ログイン</h4>
      <h6>会員の方はこちらからログイン</h6>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン",class: 'btn btn-sm btn-outline-primary btn-block' %>
        </div>
      <% end %>
      <h6>会員登録がお済でない方</h6>
      <div class='row'>
        <div class='col-md-10'>
        <%= render "public/shared/links" %><P> から新規登録してください</p>
        </div>
      </div>
    </div>
  </div>
</div>