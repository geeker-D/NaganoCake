<div class="container">
  <div class="row" style = "margin-top: 50px;">
    <h4 class="font-weight-bold"><u>マイページ</u></h4>
  </div>
  <div class="row mt-3">
    <div class="col-md-4 form-inline">
      <h5>登録情報</h5>
      <div class="ml-4">
        <%= link_to "編集する", edit_customer_path(current_customer), class: "btn btn-success" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 mt-3">
      <%= render 'my_info' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 mt-4 form-inline">
      <h5>配送先</h5>
      <div class="ml-4">
        <%= link_to "一覧を見る", shipping_addresses_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 mt-4 form-inline">
      <h5>注文履歴</h5>
      <div class="ml-4">
        <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
